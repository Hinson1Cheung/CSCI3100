<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cart | ShopVista</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/cart.css">
</head>
<body>
    <div class="header bg-white p-3"> <!-- Header -->
        <div class="header-container">
            <a href="/homepage">
                <img src="../image/logo.png" alt="Logo" class="logo">
            </a>
            <div class="action-container"> <!-- Add a container for the search bar and the login button -->
                <div class="search-container">
                    <form class="input-group" id="search-form"> <!-- Add a search form --> <!-- ID is for JS-->
                        <input type="text" class="form-control search-input" id="search-bar" placeholder="Search">
                        <div id="preview-container"></div>
                    </form>
                </div>
            </div>
            <!-- Add a link to the cart page and other url -->
        </div>
    </div>
    </div>
    <div class="container mt-5">
        <a id="historyLink" href="javascript:history.back()" style="color: rgb(0, 0, 0); font-size: small;"></a>
        <h1 class="text-center">Shopping Cart</h1>
        <div class="row" id="cardcontainer" style="display: flex; justify-content: center; align-items: stretch;">
            <!-- add form here -->
            <!-- sample display -->
            <% cartData.forEach((product, index) => { %>
                <div class="card" style="padding-bottom: 10px;">
                    <div class="checkbox-wrapper-18">
                        <div class="round">
                            <input type="checkbox" class="chk" id="<%= index + 1 %>" />
                            <label for="<%= index + 1 %>"></label>
                        </div>
                    </div>
                    <img src="<%= product.imageURL %>" alt="<%= product.pName %>" class="product-image" style="width:100%">
                    <h5 class="pname" id="n<%= index + 1 %>"><%= product.pName %></h5>
                    <p class="price" id="p<%= index + 1 %>">$<%= product.price.toFixed(2) %></p>
                    <div class="number-input">
                        <button onclick="this.parentNode.querySelector('input[type=number]').stepDown()">-</button>
                        <input type="number" class="quantity" id="q<%= index + 1 %>" value="<%= product.count %>" min="1" max="100">
                        <button onclick="this.parentNode.querySelector('input[type=number]').stepUp()">+</button>
                    </div>
                </div>
            <% }); %>
        </div>
        
        <script>
            // Get query data from server.js and pass data from cart.ejs to cart.js as String
            var cartDataJS = '<%- JSON.stringify(cartData) %>';
        </script>
        
    </div>
    <div class="row" style="display: none;" id="toolbar">
        <div class="row">
            <div class="checkbox-wrapper-18";>
                <div class="round">
                <input type="checkbox" id="select" onclick="selection()"/>
                <label for="select" style="margin-bottom: 0;"></label>
                </div>
            </div>
            <div style="color: black; align-self: center;" id="pc"> &emsp;1 Product Selected </div>
        </div>
        <div><button class="toolbar-btn" onclick="selectDel()" ><img src="../image/delete.png" style="height: 30px;" alt="delete"></button></div>
        <div class="row" style="border: 1px black solid;">
            <div style="font-size: large; font-family: Georgia, 'Times New Roman', Times, serif; align-self: center;" id="total">Total Price: $0.0 &emsp;</div>
            <a href="/payment">
                <button class="btn btn-primary my-button">Checkout</button>
            </a>
        </div>
    </div>
    <br>
    <footer style="display: flex; justify-content: space-between; align-items: center; width: 100%; background-color: #333; color: white; padding: 10px;">
        <div><a href="#" class="scroll-to-top" title="Scroll to top" style="color: white;">Back to top</a></div>
        <div>
           
            <a href="/adminlogin" style="color: white;">Admin Login</a>
        </div>
    </footer>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="/js/cart.js"></script>
    <script src="/js/search.js"></script>
</body>
</html>

